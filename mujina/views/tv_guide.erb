<div id="tv-guide">
    <p>Loading TV Guide... <img src="/images/ajax-loader.gif" /></p>
</div>

<script type="text/template" id="channels-template">
    <div class="row">
        <div class="col-xs-2 grid-header">&nbsp;</div>
        <%% _.each(rc.time_ranges(), function(time_range) { %>
            <div class="col-xs-2-5 grid-header"><%%- time_range %></div>
        <%% }); %>
    </div>

    <%% rc.get('channels').each(function(channel){ %>
    <div class="row">
        <div class="col-xs-2 channel-row"><%%- channel.get('call_sign') %> - <%%- channel.get('number') %></div>
        <%% _.each(channel.shows, function(show) { %>
        <div class="col-xs-no-width channel-row" style="width: <%%- ((show.duration / rc.get('duration')) * 83) %>%;" data-toggle="tooltip" title="<%%- show.title %> - <%%- show.description %>">
            <%%- show.title %> - <%%- show.description %>
        </div>
        <%% }); %>
    </div>
    <%% }); %>
</script>

<script src="/javascript/tv_guide.js" type="text/javascript"></script>
