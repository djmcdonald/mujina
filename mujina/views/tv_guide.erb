<!doctype html>
<html>
    <head>
        <title><%= @title %></title>
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="stylesheet" type="text/css" href="/stylesheets/mujina.css">
        <link rel="stylesheet" type="text/css" href="/stylesheets/jquery.mobile.css">
    </head>

    <body>
        <div data-role="page" class="content">
            <div data-role="header">
                <h1>TV Guide</h1>
            </div>

            <div id="tv-guide" data-role="content">
                <p>Loading TV Guide... <img src="/images/ajax-loader.gif" /><p></p>
            </div>
        </div>

        <script type="text/template" id="channels-template">
            <ul class="tv-guide-list" data-role="listview">
                <li>
                    <ul class="tv-guide-times">
                        <li>00:00</li>
                        <li>00:30</li>
                        <li>01:00</li>
                        <li>00:30</li>
                    </ul>
                </li>
            <%% _.each(rc.channels, function(channel){ %>
                <li>
                    <ul>
                        <li><img src="/tv/channel/1/icon" /></li>
                        <li class="channel-details"><%%- channel.channel_number %> - <%%- channel.call_sign %></li>
                        <li class="sixty">Eastenders</li>
                        <li class="sixty">Holby City</li>
                    </ul>
                </li>
            <%% }); %>
            </ul>
        </script>

        <script src="/javascript/vendors/jquery.js" type="text/javascript"></script>
        <script src="/javascript/vendors/jquery.mobile.js" type="text/javascript"></script>
        <script src="/javascript/vendors/handlebars.js" type="text/javascript"></script>
        <script src="/javascript/vendors/underscore.js" type="text/javascript"></script>
        <script src="/javascript/vendors/backbone.js" type="text/javascript"></script>
        <script src="/javascript/app.js" type="text/javascript"></script>
    </body>
</html>