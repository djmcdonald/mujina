<div id="tv-guide">
    <p>Loading TV Guide... <img src="/images/ajax-loader.gif" /><p></p>
</div>

<script type="text/template" id="channels-template">
    <div class="row">
        <div class="col-xs-2 grid-header">&nbsp;</div>
        <div class="col-xs-2-5 grid-header"><%%- moment(rc.start_time, 'YYYY-MM-DD HH:mm:ss').format('HH:mm') %></div>
        <div class="col-xs-2-5 grid-header"><%%- moment(rc.start_time, 'YYYY-MM-DD HH:mm:ss').add('seconds', 915).format('HH:mm') %></div>
        <div class="col-xs-2-5 grid-header"><%%- moment(rc.start_time, 'YYYY-MM-DD HH:mm:ss').add('seconds', 1830).format('HH:mm') %></div>
        <div class="col-xs-2-5 grid-header"><%%- moment(rc.start_time, 'YYYY-MM-DD HH:mm:ss').add('seconds', 2745).format('HH:mm') %></div>
    </div>

    <%% _.each(rc.channels, function(channel){ %>
    <div class="row">
        <div class="col-xs-2 channel-row"><%%- channel.call_sign %> - <%%- channel.number %></div>
        <%% _.each(channel.shows, function(show) { %>
        <div class="col-xs-2-5 channel-row <%%- show.category %>" style="width: <%%- ((show.duration / rc.duration) * 100) - 2.4 %>%;" data-toggle="tooltip" title="<%%- show.title %> - <%%- show.description %>">
            <%%- show.title %> - <%%- show.description %>
        </div>
        <%% }); %>
    </div>
    <%% }); %>
</script>

<script src="/javascript/tv_guide.js" type="text/javascript"></script>
